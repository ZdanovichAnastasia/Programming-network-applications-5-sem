<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>AddProducer</servlet-name>
        <servlet-class>database.servlets.AddProducerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddProducer</servlet-name>
        <url-pattern>/AddProducer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddWatch</servlet-name>
        <servlet-class>database.servlets.AddWatchServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddWatch</servlet-name>
        <url-pattern>/AddWatch</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>show</servlet-name>
        <servlet-class>database.servlets.ShowServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>show</servlet-name>
        <url-pattern>/show</url-pattern>
    </servlet-mapping>

</web-app>